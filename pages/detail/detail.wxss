/* pages/detail/detail.wxss */
page{
  color: #555;
  height: 100%;
}
page .wrap{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.detail-body{
  flex: 1;
  overflow-x: hidden;
  margin-bottom: 124rpx;
}
swiper{
  height: 700rpx;
}
.slide-image{
  width: 100%;
  height: 700rpx;
}
.detail-body .msg{
  width: 90%;
  margin:  10rpx 30rpx;
  border-bottom:2rpx solid #dedede; 
}
.detail-body .msg .title{
  color: #fe5478;
}
.detail-body .msg .price{
  font-size: 36rpx;
  color: #f00;
}
.detail-body .msg .yunfei{
  font-size: 26rpx;
}
.detail-body .kuanshi{
  width: 90%;
  margin:  0 30rpx;
  border-bottom:2rpx solid #dedede; 
  display: flex;

}
.detail-body .kuanshi .title{
  font-size: 30rpx;
  white-space: nowrap;
}
.detail-body .kuanshi .ct{
  font-size: 24rpx;
  padding-left: 30rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.detail-body .kuanshi .ct .normal{

  width: 240rpx;
  height: 60rpx;
  border: 1rpx solid #999;
  line-height: 60rpx;
  text-align: center;
  border-radius: 6px;
  margin: 20rpx 20rpx;
}
.detail-body .kuanshi .ct .is_checked{
  width: 240rpx;
  height: 60rpx;
  border: 1rpx solid #fe5478;
  color: #fe5478;
  line-height: 60rpx;
  text-align: center;
  border-radius: 6px;
  margin: 20rpx 20rpx;
}
.footNavbar{
  height: 124rpx;
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
}
.footNavbar .left{
  width: 50%;
  height: 100%;
  float: left;
  box-sizing: border-box;
}
.footNavbar .left .gohome{
  width: 50%;
  height: 100%;
  float: left;
  border-right:2rpx solid #d1d1d1; 
  box-sizing: border-box;
  text-align: center;
  line-height: 180rpx;
  font-size: 30rpx;
  position: relative;
}
.footNavbar .left .gohome image{
  display: block;
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left:50%;
  margin-left: -30rpx;
}
.footNavbar .left .cart{
  width: 50%;
  height: 100%;
  float: left;
  box-sizing: border-box;
  text-align: center;
  line-height: 180rpx;
  font-size: 30rpx;
  position: relative;
}
.footNavbar .left .cart image{
  display: block;
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left:50%;
  margin-left: -30rpx;
}
.footNavbar .right{
  width: 50%;
  height: 100%;
  float: left;
}
.footNavbar .right .addtocart{
  width: 50%;
  height: 100%;
  float: left;
  box-sizing: border-box;
  text-align: center;
  line-height: 124rpx;
  font-size: 30rpx;
  background: #FD9326;
  color: #ffffff;
}
.footNavbar .right .tobuy{
  width: 50%;
  height: 100%;
  float: left;
  box-sizing: border-box;
  text-align: center;
  line-height: 124rpx;
  font-size: 30rpx;
  background: #fe5478;
  color: #ffffff;
}
