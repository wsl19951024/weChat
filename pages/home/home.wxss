  flex-wrap: wrap;
}
.lighter .singleflowergift .singleflowergift-ct{
  margin-top:10px;
  width: 43%;
  height: 200px;
  border:1px solid #d1d1d1;
  border-radius: 5px;
}
.lighter .singleflowergift .singleflowergift-ct image{
  vertical-align: top;
  width: 100%;
  height: 126px;
  border-radius: 5px 5px 0 0;
}
.lighter .singleflowergift .singleflowergift-ct .text{
  font-size: 15px;
