 .flowers-list-ct{
  width: 90%;
  height: 267px;
  position: relative;
  margin: 30rpx auto;
}
 .flowers-list-ct image{
  width: 100%;
  height: 267px;
  border-radius:5px;
  text-align: center;
}
 .flowers-list-ct .text{
  border-radius: 5px 5px 0 0 ;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 50px;
  line-height: 50px;
  background: #000;
  opacity: .5;
  color: #ffffff;
  font-size: 15px;
  display: flex;
  justify-content: space-around;
}
 .flowers-list-ct  button{
  position: absolute;
  width: 100%;
  height: 90rpx;
  bottom: 0;
  left: 0;
  line-height: 90rpx;
  font-size: 36rpx;
  color:  #fe5478;
  border-radius: none;
  background: #000;
  opacity: .5;
}
